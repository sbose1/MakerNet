<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Create a New Post</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/posts" method="POST">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input class="form-control" type="text" name="title" id="title" placeholder="Enter title">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" id="description" placeholder="Enter post Description...">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/images">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

