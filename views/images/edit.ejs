<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= image.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
        
        
        <label for="name">Image</label>
                    
                    <div class="thumbnail">
      
      <div class="caption-full">
                </div>
                </div>
                
                
            <form action="/images/<%=image._id%>?_method=PUT" method="POST" >
                <div class="form-group">
                    <label for="name">Name/Description</label>
                    <input class="form-control" type="text" name="name" id="name" value="<%= image.name %>">
                </div>
                
                
                
                 <div class="form-group">
                 <img class="img-responsive"  src="/<%= image.image %>">
                 <input class="form-control" type="text" name="image" id="image" value="<%= image.image %>">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= image.location %>">
                </div>
                
                
                
                    
                
                
                
             
               
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update!</button>
                </div>
            </form>
            <a href="/images">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

